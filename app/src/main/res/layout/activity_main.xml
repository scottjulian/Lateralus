<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/activity_main_container"
                android:padding="0dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="lateralusxyz@gmail.com"
            android:id="@+id/text_title_email"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/lateralus_pink"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            android:id="@+id/tableLayout"
            android:layout_below="@+id/text_title_email"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Account Type:"
                    android:id="@+id/textView7"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:paddingRight="2dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Premium"
                    android:id="@+id/text_status_account_type"
                    android:paddingLeft="2dp"
                    android:textColor="@color/lateralus_green"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Device ID:"
                    android:id="@+id/textView9"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:paddingRight="2dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Registered"
                    android:id="@+id/text_status_device_id"
                    android:paddingLeft="2dp"
                    android:textColor="@color/lateralus_green"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="GCM Token:"
                    android:id="@+id/textView11"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:paddingRight="2dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OK"
                    android:id="@+id/text_status_gcm_token"
                    android:paddingLeft="2dp"
                    android:textColor="@color/lateralus_green"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Internet:"
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:paddingRight="2dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Connected"
                    android:id="@+id/text_status_internet"
                    android:paddingLeft="2dp"
                    android:textColor="@color/lateralus_green"/>
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lateralus v1.2"
            android:id="@+id/text_lateralus_version"
            android:layout_above="@+id/text_link_privacy_policy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="https://lateralus.xyz"
            android:id="@+id/text_lateralus_url"
            android:clickable="false"
            android:layout_above="@+id/text_lateralus_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="lateralusxyz@gmail.com"
            android:id="@+id/text_lateralus_email"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="privacy policy"
            android:id="@+id/text_link_privacy_policy"
            android:textColor="@color/lateralus_blue"
            android:clickable="true"
            android:layout_above="@+id/text_lateralus_url"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</RelativeLayout>